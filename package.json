{
  "name": "mvp-blockchain",
  "version": "0.0.0",
  "license": "MIT",
  "author": "George Bennett",
  "scripts": {
    "build": "truffle compile",
    "reset": "rimraf build test/*.js",
    "test": "tsc && truffle test && rimraf test/*.js",
    "generate-types":
      "truffle compile && ts-node generate-contacts-types.ts > truffle.d.ts && yarn format",
    "lint": "tslint --format codeFrame --fix '{test,contracts}/**/*.ts'",
    "format":
      "prettier '*.{js,json,md}' '{test,contracts}/**/*.ts' '*.ts' --write",
    "precommit": "yarn format && yarn lint && yarn test"
  },
  "dependencies": {
    "@types/chai": "^4.1.4",
    "@types/node": "^10.5.7",
    "bignumber.js": "^7.2.1",
    "chai": "^4.1.2",
    "debug": "^3.1.0",
    "supertest": "^3.1.0",
    "truffle": "^4.1.11",
    "web3": "^1.0.0-beta.35"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "nodemon": "^1.17.4",
    "prettier": "1.12.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  }
}
